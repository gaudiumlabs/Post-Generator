<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
 
    <class name="json.FBPost" table="Post">
 
        <id name="id" column="ID">
            <generator class="native" />
        </id>
 
        <property name="message" type="string">
            <column name="MESSAGE" length="200" not-null="true" />
        </property>
 
        <property name="likeCount" type="int">
            <column name="LIKECOUNT" not-null="false" />
        </property>
 
 		<property name="shareCount" type="int">
            <column name="SHARECOUNT" not-null="false" />
        </property>
 
        <property name="source" type="string">
            <column name="SOURCE" length="100" not-null="false" />
        </property>
 
    </class>
</hibernate-mapping>